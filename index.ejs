<!DOCTYPE html>
<html>
<head>
	<title>React Universal UI</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="format-detection" content="telephone=no">
	<meta name="msapplication-tap-highlight" content="no">

	<style>
		:focus { outline: none; }
		body {
			font-family: "Avenir Next",Nunito,"Helvetica Neue",Helvetica,sans-serif;
			font-size: 14px;
			color: #1f2128;
			font-weight: 400;
			overflow: hidden;
		}
		#root {
			position: absolute;
			top: 0; right: 0; bottom: 0; left: 0;
			display: flex;
		}
		.touchable {
			cursor: pointer;
			user-select: none;
		}

		.page-section-title:after {
			content: '';
			width: 65px;
			display: block;
			height: 1px;
			border-bottom: 2px solid #de4f4f;
			text-align: center;
			margin: 10px auto 0;
		}

		.navigation-item:hover .title {
			color: #de4f4f;
		}

		@font-face {
			font-family: Material Icons;
			src: url(MaterialIcons.ttf) format('truetype');
		}

		@font-face {
			font-family: Entypo;
			src: url(Entypo.ttf) format('truetype');
		}

		@font-face {
			font-family: EvilIcons;
			src: url(EvilIcons.ttf) format('truetype');
		}

		<% if (typeof initialStyles !== 'undefined') { %><%-initialStyles%><% } %>
	</style>
</head>

<body>
	<div id="root"><% if (typeof initialHtml !== 'undefined') { %><%-initialHtml%><% } %></div>

  <%if (typeof htmlWebpackPlugin !== 'undefined' && !htmlWebpackPlugin.options.isProduction) { %>
		<script src="/vendor.bundle.js"></script>
  <% } %>

  <% if (typeof serverSide !== 'undefined') { %>
		<script src="http://localhost:3000/vendor.bundle.js"></script>
		<script src="http://localhost:3000/app.js"></script>
  <% } %>
</body>
</html>
